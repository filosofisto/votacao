<%= render 'form', vote: @vote %>

<script>
    function vote(chapa) {
        let msg;

        if (chapa === 0) {
            msg = 'Confirma voto em branco?';
        } else {
            msg = 'Confirma voto na Chapa ' + chapa + '?'
        }

        if (confirm(msg)) {
            document.getElementById("_voto").value = chapa;
            document.getElementById("_f").submit();
        }
    }
</script>



