<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="card mb-6 shadow-sm">
          <div class="card-body">
            <p class="card-text"><h3>Alteração da Senha</h3></p>
            <%= form_for current_user, url: password_path do |f| %>
              <div class="form-group">
                <%= f.label "Senha Atual" %>
                <%= f.password_field :current_password, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label "Nova Senha" %>
                <%= f.password_field :password, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label "Confirme a Senha" %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
              </div>

              <%= f.submit "Alterar Senha", class: "btn btn-primary" %>
              <a href="/votes/new">Não quero alterar a senha</a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
